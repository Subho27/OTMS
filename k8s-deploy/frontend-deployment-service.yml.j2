apiVersion: apps/v1
kind: Deployment
metadata:
  name: otms-frontend-deployment
  namespace: default
  labels:
    app: otms-frontend
spec:
  replicas: 2
  selector:
    matchLabels:
      app: otms-frontend
  template:
    metadata:
      labels:
        app: otms-frontend
    spec:
      containers:
        - name: otms-frontend
          image: subhodip703/ui-otms:0.0.1
          ports:
            - containerPort: 80
          env:
            - name: BACKEND_HOST
              valueFrom:
                configMapKeyRef:
                  name: otms-backend-config
                  key: BACKEND_HOST
            - name: BACKEND_PORT
              valueFrom:
                configMapKeyRef:
                  name: otms-backend-config
                  key: BACKEND_PORT
            - name: BACKEND_URL
              valueFrom:
                configMapKeyRef:
                  name: otms-backend-config
                  key: BACKEND_URL
          resources:
            requests:
              cpu: "100m"
              memory: "200Mi"
            limits:
              cpu: "500m"
              memory: "500Mi"

---

apiVersion: v1
kind: Service
metadata:
  name: otms-frontend-service
  namespace: default
spec:
  selector:
    app: otms-frontend
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
      nodePort: 31277
  type: NodePort
